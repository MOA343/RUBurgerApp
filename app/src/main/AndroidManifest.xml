<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ruburger">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RUBurgerApp"
        tools:targetApi="31">

        <!-- Launcher/Main entry point -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.RUBurgerApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other screens -->
        <activity
            android:name=".BurgerActivity"
            android:exported="false"
            android:label="@string/btn_order_burger"
            android:theme="@style/Theme.RUBurgerApp" />

        <activity
            android:name=".SandwichActivity"
            android:exported="false"
            android:label="@string/btn_order_sandwich"
            android:theme="@style/Theme.RUBurgerApp" />

        <activity
            android:name=".BeverageActivity"
            android:exported="false"
            android:label="@string/btn_order_beverage"
            android:theme="@style/Theme.RUBurgerApp" />

        <activity
            android:name=".SideActivity"
            android:exported="false"
            android:label="@string/btn_order_side"
            android:theme="@style/Theme.RUBurgerApp" />

        <activity
            android:name=".OrderDetailsActivity"
            android:exported="false"
            android:label="@string/btn_view_order"
            android:theme="@style/Theme.RUBurgerApp" />

    </application>
</manifest>
